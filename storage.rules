rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // --- Regras padrão ---
    match /{allPaths=**} {
      // Todos podem ler arquivos (para exibir imagens no site público)
      allow read: if true;

      // Apenas usuários autenticados podem tentar escrever
      allow write: if request.auth != null
        && (
          // Se o usuário é admin ou editor
          get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'editor']
        );
    }
  }
}
