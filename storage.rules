rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // --- Regras padrão ---
    match /{allPaths=**} {
      // Todos podem ler arquivos (para exibir imagens no site público)
      allow read: if true;

      // Apenas usuários autenticados podem tentar escrever
      // Nota: Verificação de role é feita no Firestore, Storage permite usuários autenticados
      allow write: if request.auth != null;
    }
  }
}
