rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra padrão: leitura pública, escrita apenas autenticados
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Coleção de usuários
    match /users/{userId} {
      // Cada usuário pode ler apenas seu próprio documento
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Admin pode ler todos os usuários
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
      
      // Apenas admin pode criar, editar ou excluir usuários
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
    
    // Coleção de eventos
    match /events/{eventId} {
      // Qualquer pessoa pode ler eventos (público)
      allow read: if true;
      
      // Apenas admin e editor podem criar/editar/excluir eventos
      allow create, update, delete: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin" ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "editor"
      );
    }
    
    // Coleção de fotos
    match /photos/{photoId} {
      // Qualquer pessoa pode ler fotos (público)
      allow read: if true;
      
      // Apenas admin e editor podem criar/editar/excluir fotos
      allow create, update, delete: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin" ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "editor"
      );
    }
  }
}